<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Author: Hung Vu    -->
    <!-- Base application theme. -->
    <style name="Theme.ComChat" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <!-- Toolbar -->
        <item name="colorPrimary">@color/toolbarLightMode</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <!-- Title text -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/backgroundLightMode</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/notificationBarLightMode</item>
        <item name="android:textColor">@color/textLightMode</item>
        <item name="materialButtonStyle">@style/MaterialButtonTheme</item>
        <item name="radioButtonStyle">@style/MaterialRadioButtonTheme</item>
    </style>

    <!--
    Customized button design.
    Source: https://stackoverflow.com/questions/56296694/material-design-components-button-global-theme-overriding-broken
    -->
    <style name="MaterialButtonTheme" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/CustomizedButtonStyle</item>
    </style>

    <style name="CustomizedButtonStyle">
        <item name="colorPrimary">@color/buttonLightMode</item>
        <item name="colorOnPrimary">@color/buttonText</item>
    </style>

    <!--
    Customized radio button design.
    Source: https://material.io/develop/android/components/radiobuttons
     -->
    <style name="MaterialRadioButtonTheme" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.RadioButton</item>
    </style>

    <style name="ThemeOverlay.App.RadioButton" parent = "">
        <item name="colorOnSurface">@color/radioUnselectedLight</item>
        <item name="colorSecondary">@color/radioSelectedLight</item>
    </style>
</resources>